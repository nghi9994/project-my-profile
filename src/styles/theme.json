{
  "breakpoints": {
    "sm": "650px",
    "md": "900px"
  },
  "colors": {
    "default": {
      "buttonBg": "rgba(0,0,0,0.8)",
      "text": "#757575",
      "title": "#333333",
      "titleDark": "#000000"
    }
  },
  "components": {
    "Button": {
      "variants": {
        "solid": {
          "bg": "default.buttonBg",
          "color": "white",
          "borderRadius": "16px",
          "height": "60px",
          "minWidth": "180px",
          "_hover": {
            "bg": "default.buttonBg"
          }
        }
      }
    },
    "Container": {
      "variants": {
        "bottomModalLayout": {
          "bg": "white",
          "borderRadius": "16px 16px 0 0",
          "boxShadow": "default.bottomModal",
          "maxW": "100vw",
          "padding": "0",
          "zIndex": "1",
          "position": "fixed",
          "bottom": "0",
          "left": "0",
          "right": "0"
        },
        "navbar": {
          "borderRadius": {
            "base": "8px 8px 0 0",
            "sm": "0 0 8px 8px"
          },
          "maxW": "100vw",
          "padding": "0",
          "position": "fixed",
          "top": { "base": "unset", "sm": "0" },
          "bottom": { "base": "0", "sm": "unset" },
          "left": "0",
          "right": "0",
          "zIndex": "1"
        },
        "pageLayout": {
          "height": "100vh",
          "maxW": "100%",
          "minH": "800px",
          "paddingTop": { "base": "30px", "sm": "70px" },
          "position": "relative"
        }
      }
    },
    "Text": {
      "variants": {
        "title": {
          "color": "default.titleDark",
          "fontSize": { "base": "4xl", "sm": "5xl", "md": "6xl" },
          "fontWeight": "bold"
        },
        "subtitle": {
          "color": "default.title",
          "fontSize": { "base": "xl", "md": "2xl" }
        }
      }
    }
  },
  "shadows": {
    "default": {
      "bottomModal": "0 0px 5px 1px rgba(0, 0, 0, 0.25)"
    }
  },
  "styles": {
    "global": {
      "*": {
        "transition": "all 0.4s ease"
      },
      "html": {
        "background": "white",
        "color": "default.text",
        "fontFamily": "'Poppins', sans-serif",
        "scrollBehavior": "smooth"
      },
      "body": {
        "margin": "auto",
        "maxWidth": "container.lg"
      }
    }
  }
}
